<Window x:Name="quadro" x:Class="TNKDxf.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TNKDxf" 
       mc:Ignorable="d"
      Title="FLUXO DO DESENHO" Height="450" Width="900"
      Icon="Assets/Icons/favicon.ico">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Barra de comandos com progresso -->
        <ToolBarTray Grid.Row="0" Grid.ColumnSpan="2">
            <ToolBar>
                <Button Content="Extrair"
                        Command="{Binding ExtrairCommand}"
                        Padding="12,6"
                        ToolTip="Extrair desenhos do Tekla"
                        IsEnabled="{Binding PodeExtrair}"/>
                <Separator/>
                <ProgressBar Width="220" Height="16"
                             Minimum="0"
                             IsIndeterminate="{Binding ProgressoIndeterminado}"
                             Maximum="{Binding ProgressoMaximo}"
                             Value="{Binding ProgressoAtual}"/>
                <TextBlock Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding StatusProgresso}"/>
            </ToolBar>
        </ToolBarTray>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- DataGrid com os arquivos -->
            <DataGrid ItemsSource="{Binding Arquivos}" AutoGenerateColumns="False"
                 Grid.Column="0" Margin="5" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome do Arquivo" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTemplateColumn x:Name="colunaAcao" Header="Converter" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button FontFamily="Segoe MDL2 Assets"
                                        Content="{Binding Aberto, Converter={local:BoolToAbrirFecharConverter}}"
                                        Command="{Binding DataContext.ToggleAbrirCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding PodeConverter}"
                                        Margin="2"
                                        Padding="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Width="32"
                                        Height="28"
                                        FontSize="16"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="colunaDownload" Header="Download" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button FontFamily="Segoe MDL2 Assets"
                                        Content="&#xE896;"
                                        Command="{Binding DataContext.DownloadArquivoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Margin="2"
                                        Padding="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Width="32"
                                        Height="28"
                                        FontSize="16"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Selecionado}" Value="True">
                                <Setter Property="Background" Value="LightPink"/>
                                <Setter Property="Foreground" Value="DarkRed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
        <!-- Conteúdo à direita -->
        <ContentControl Grid.Row="1" Grid.Column="1"
                    Content="{Binding ConteudoSelecionado}"
                    Margin="5" />
    </Grid>
</Window>
