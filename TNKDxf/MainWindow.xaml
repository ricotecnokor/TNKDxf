<Window x:Name="quadro" x:Class="TNKDxf.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:TNKDxf"
       mc:Ignorable="d"
       Title="FLUXO DO DESENHO" Height="450" Width="800">
    <Grid>
        <TabControl Name="MainTabControl">
            <TabItem Header="ENVIAR">
                <Grid>

                    <DataGrid x:Name="dgArquivos" Margin="10,10,10,40" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="NOME"  Binding="{Binding Nome}"/>
                            <DataGridTemplateColumn Header="DETALHES">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="AddTabsButton_Click">Exibir</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btnEnviar" Content="ENVIAR" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="btnEnviar_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="CORRIGIR">
                <DataGrid x:Name="dgArquivosErrados" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NOME" Binding="{Binding Nome}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="DESCRIÇÃO">
                <Grid>
                    <Label x:Name="lblprojeto" Content="PROJETO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="590"/>
                    <Label x:Name="lblcara" Content="DESENHISTA" HorizontalAlignment="Left" Margin="112,174,0,0" VerticalAlignment="Top" Width="590"/>
                    <Label x:Name="lblplot" Content="NOME DESENHO" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblmodificacao" Content="MOMENTO DA ÚLTIMA MODIFICAÇÃO" HorizontalAlignment="Left" Margin="112,139,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="btnTeste" Content="TESTE" HorizontalAlignment="Left" Margin="130,251,0,0" VerticalAlignment="Top" Click="btnTeste_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="REVISÕES" />
            <TabItem Header="MATERIAIS" />



        </TabControl>
    </Grid>
</Window>
