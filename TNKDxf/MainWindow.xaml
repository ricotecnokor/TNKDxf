<Window x:Name="quadro" x:Class="TNKDxf.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TNKDxf" 
      xmlns:local1="clr-namespace:TNKDxf.ViewModel"
       mc:Ignorable="d"
      Title="FLUXO DO DESENHO" Height="450" Width="900">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- DataGrid com os arquivos -->
            <DataGrid ItemsSource="{Binding Arquivos}" AutoGenerateColumns="False"
                 Grid.Column="0" Margin="5" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome do Arquivo" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTemplateColumn x:Name="colunaAcao" Header="Converter" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button FontFamily="Segoe MDL2 Assets"
                                   Content="{Binding Aberto, Converter={local:BoolToAbrirFecharConverter}}" 
                                   Command="{Binding DataContext.ToggleAbrirCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" 
                                   CommandParameter="{Binding}" 
                                   Margin="2" Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="colunaDownload" Header="Download" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button FontFamily="Segoe MDL2 Assets"
                                        Content="&#xE896;"
                                        Command="{Binding DataContext.DownloadArquivoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Selecionado}" Value="True">
                                <Setter Property="Background" Value="LightPink"/>
                                <Setter Property="Foreground" Value="DarkRed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
        <!-- TabControl para exibir os arquivos abertos -->
        <ContentControl Grid.Column="1"
                    Content="{Binding ConteudoSelecionado}"
                    Margin="5" />
    </Grid>
</Window>
